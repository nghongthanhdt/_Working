@model PHCN.NhanVien.Models.SoKSK

<div class="row">
    <div class="col-sm-3">
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <img src="/Content/ImageAvatar/default-avatar.png" class="pull-left" style="width:100%; border:1px solid #808080; padding:2px;">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Mã số</label>
                    <input type="text" class="form-control" placeholder="" id="txtMaSo" value="@Model.MaSo">
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-9">
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label>1. Họ và tên</label>
                    <input type="text" class="form-control" placeholder="" id="txtHoTen" value="@Model.HoTen">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-md-6">
                        <label>2. Giới</label>
                        <div class="row">
                            <div class="col-md-12">
                                <label style="font-weight:normal; font-size:14px;">
                                    <input type="checkbox" id="checkboxGioiTinhNam" @((Model.GioiTinh == 1)?"checked='checked'":"")> &nbsp;&nbsp; Nam
                                </label>
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <label style="font-weight:normal; font-size:14px;">
                                    <input type="checkbox" value="" id="checkboxGioiTinhNu" @((Model.GioiTinh == 2)?"checked='checked'":"")> &nbsp;&nbsp; Nữ
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label>Năm sinh</label>
                        <div class="row">
                            
                            <div class="col-md-4">
                                <input class="form-control text-right number" placeholder="" type="text" id="txtNamSinh" maxlength="11" value="@Model.NamSinh">
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-md-4">
                        <label>3. Số CMND hoặc Hộ chiếu</label>
                        <div class="row">
                            <div class="col-md-12">
                                <input class="form-control text-right number" placeholder="" type="text" id="txtSoCMND" value="@Model.SoCMND">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label>Cấp ngày</label>
                        <div class="row">
                            <div class="col-md-12">
                                <input class="form-control text-right date" placeholder="" type="text" id="txtNgayCapCMND" value="@Model.NgayCapCMND">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label>Tại</label>
                        <div class="row">
                            <div class="col-md-12">
                                <input class="form-control text-right" placeholder="" type="text" id="txtNoiCapCMND" value="@Model.NoiCapCMND">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label>4. Hộ khẩu thường trú</label>
                    <textarea class="form-control" id="txtHoKhauThuongTru">@Model.HoKhauThuongTru</textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label>5. Chỗ ở hiện tại:</label>
                    <textarea class="form-control" id="txtChoOHienTai">@Model.ChoOHienTai</textarea>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>6. Nghề nghiệp</label>
            <input type="text" class="form-control" placeholder="" id="txtNgheNghiep" value="@Model.NgheNghiep">
        </div>      
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>7. Nơi công tác học tập</label>
            <input type="text" class="form-control" placeholder="" id="txtNoiCongTacHocTap" value="@Model.NoiCongTacHocTap">
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>8. Ngày bắt đầu vào học/làm việc tại đơn vị hiện nay</label>
            <input type="text" class="form-control date" placeholder="" id="txtNgayBatDauHocTapLamviec" value="@Model.NgayBatDauHocTapLamviec">
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>9. Nghề, công việc trước đây (liệt kê các công việc đã làm trong 10 năm trở lại đây, tính từ thời điểm gần nhất)</label>
            <textarea class="form-control" id="txtNgheCongViecTruocDay">@Model.NgheCongViecTruocDay</textarea>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>10. Tiền sử bệnh, tật của gia đình</label>
            <textarea class="form-control" id="txtTienSuBenhTatCuaGiaDinh">@Model.TienSuBenhTatCuaGiaDinh</textarea>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label>11. Tiền sử bản thân</label> [ <a href="javascript:void(0);" id="linkThemBenh">Thêm bệnh</a> ]
                    <textarea class="form-control" id="txtTienSuBanThan">@Model.TienSuBanThan</textarea>
                    
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div id="divSoKSKDanhSachBenh">

                </div>
                @*@Html.Action("_pSoKSK_Benh")*@
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-4">
                <label>LẬP SỔ KSK</label>
                <div class="row">
                    <div class="col-md-12">
                        <input class="form-control" placeholder="Tại..." type="text" id="txtLapSoKSK_NoiKy" value="@Model.LapSoKSK_NoiKy">
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <label>Ngày</label>
                <div class="row">
                    <div class="col-md-12">
                        <input class="form-control date" placeholder="" type="text" id="txtLapSoKSK_NgayKy" value="@Model.LapSoKSK_NgayKy">
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <label>Người lập</label>
                <div class="row">
                    <div class="col-md-12">
                        <input class="form-control" placeholder="" type="text" id="txtLapSoKSK_NguoiKy" value="@Model.LapSoKSK_NguoiKy">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <br/>
                <button class="btn btn-lg btn-success pull-right" id="btnLuu">Lưu sổ KSK</button>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_pmodalChiTietBenh")