
@{ 
    List< PHCN.NhanVien.Models.GuiNhan> listBaiViet = ViewBag.ListBaiViet;
    int stt = 1;
}

<table class="table table-condensed">
    <thead>
        <tr>
            <th style="width:3%">#</th>
            <th style="width:57%">Tiêu đề</th>
            <th style="width:20%">Người gửi</th>
            <th style="width:20%">Ngày</th>
        </tr>
    </thead>
    <tbody>

        
        @foreach (PHCN.NhanVien.Models.GuiNhan item in listBaiViet)
        {
            
            <tr>
                <td>@stt</td>
                <td>                    
                    <a href="@Url.Action("XemThu", "ThuNoiBo", new { id = item.MaBaiViet})">@item.BaiViet.TieuDe</a>
                </td>
                <td>@item.NhanVien.HoTen</td> @*(người gửi)*@
                <td>@item.BaiViet.Ngay</td>
            </tr>
        }
        
    </tbody>
</table>
