<div class="lates">
    <div class="container">
        <div class="text-center">
            <h2>Tin mới</h2>
        </div>

        @{ 
            int count = 0;
        }

        @foreach (var item in listBaiVietWeb)
        {
            count++;
            var listHinhAnh = db.HinhAnh.Where(x => x.LoaiHinhAnh == "baivietweb" && x.MaBaiViet == item.MaBaiViet && x.Xoa != true && x.DaiDienBaiVietWeb == true).OrderByDescending(x => x.MaHinhAnh).ToList();


            <div class="col-md-4 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="300ms">
                @if (listHinhAnh.Any())
                {
                    
                    @*<img src="@(listHinhAnh.First().DuongDan + listHinhAnh.First().TenFileDayDu)" class="img-responsive" />*@
                    <a href="@(HttpContext.Current.Request.Url.Scheme + "://" + HttpContext.Current.Request.Url.Authority + "/tin-tuc/" + item.ChuyenMuc.TenChuyenMucRewrite + "/" + item.TieuDeRewrite + "." + item.MaBaiViet + ".html")">
                        <div class="hinh-anh" style="background-image:url('@(listHinhAnh.First().DuongDan + listHinhAnh.First().TenFileDayDu)'); width:100%; height:200px; background-size: cover;">
                        </div>
                    </a>

                    
                }
                else
                {

                    <a href="@(HttpContext.Current.Request.Url.Scheme + "://" + HttpContext.Current.Request.Url.Authority + "/tin-tuc/" + item.ChuyenMuc.TenChuyenMucRewrite + "/" + item.TieuDeRewrite + "." + item.MaBaiViet + ".html")">
                        <div class="hinh-anh" style="background-image:url('@Url.Content("~/Content/img/no-image.jpg")'); width:100%; height:200px; background-size: cover;">
                        </div>
                    </a>

                    
                }

                <h4>
                    <a class="tieu-de-tin-tuc" href="@(HttpContext.Current.Request.Url.Scheme + "://" + HttpContext.Current.Request.Url.Authority + "/tin-tuc/" + item.ChuyenMuc.TenChuyenMucRewrite + "/" + item.TieuDeRewrite + "." + item.MaBaiViet + ".html")">
                        @item.TieuDe
                    </a>
                    
                </h4>
                <p>
                    @item.TomTat
                </p>
            </div>

            if (count == 3 || count == 6)
            {
                <div style="clear:both;"></div>
            }
        }
        
        
        <div style="clear:both;"></div>
        
        
        <div class="text-center">
            <br />
            <a class="btn btn-lg btn-default" href="@Url.Action("Index", "TinTuc")" style="border:1px solid #cbcbcb;">Xem thêm...</a>
        </div>
    </div>
</div>



