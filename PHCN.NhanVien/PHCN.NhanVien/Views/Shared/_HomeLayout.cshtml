

@{
    Layout = null;
    if (ViewBag.PageImage == null)
    {
        ViewBag.PageImage = "/Content/home/images/slider/bvphcndt-banner.jpg";
    }
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.PageTitle - Bệnh viện Phục hồi chức năng Đồng Tháp</title>

    <!-- Bootstrap -->
    <link href="~/Content/home/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/home/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/home/css/animate.css">
    <link href="~/Content/home/css/prettyPhoto.css" rel="stylesheet">
    <link href="~/Content/home/css/style.css" rel="stylesheet" />
    <link rel="icon" href="~/Content/img/logo.ico" type="image/x-icon">
    
    <meta property="og:url" content="@ViewBag.PageUrl" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="@ViewBag.PageTitle" />
    <meta property="og:description" content="@ViewBag.PageDescription" />
    <meta property="og:image" content="http://bvphcndt.com@(ViewBag.PageImage)" />
    

</head>

<body>
    <div id="TrangChu"></div>
    <header>
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse.collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <div class="navbar-brand">
                            <a href="@Url.Action("Index", "Home")"><h1><span>BV</span>PHCNĐT</h1></a>
                        </div>
                    </div>

                    <div class="navbar-collapse collapse">
                        <div class="menu">
                            <ul class="nav nav-tabs" role="tablist">
                                <li role="presentation"><a href="@Url.Action("Index", "Home")#TrangChu" class="active">Trang chủ</a></li>
                                <li role="presentation"><a href="@Url.Action("Index", "Home")#GioiThieu">Giới thiệu</a></li>
                                <li role="presentation"><a href="@Url.Action("Index", "Home")#TinTuc">Tin tức</a></li>
                                <li role="presentation"><a href="@Url.Action("Index", "Home")#DichVu">Dịch vụ</a></li>
                                <li role="presentation"><a href="@Url.Action("Index", "Home")#LienHe">Liên hệ</a></li>
                                <li role="presentation"><a href="@Url.Action("Index", "NoiBo")">Nội bộ</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    @RenderBody()
    <div id="LienHe"></div>
    <section id="conatcat-info">
        <div class="container">
            <div class="row">
                <div class="col-sm-8">
                    <div class="media contact-info wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="600ms">
                        <div class="pull-left">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="media-body">
                            <h2>Liên hệ</h2>
                            <p>BỆNH VIỆN PHỤC HỒI CHỨC NĂNG ĐỒNG THÁP<br />
                            167 Tôn Đức Thắng, Phường 1, TP Cao Lãnh, Đồng Tháp<br />
                            Mã số thuế: 1400524306<br />
                            Điện thoại & Fax: <strong>02773.871.635</strong> - Phòng Tổ chức Hành chính</p>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    
    </section>

    
    <footer>
        <section id="partner" style="background-position:bottom; background-size:100% auto; text-shadow:1px 1px 1px black;">
            <div class="container">
                <div class="center wow fadeInDown">
                    <h2>Bệnh viện Phục hồi Chức năng</h2>
                    <p>Chung tay góp sức cho ngày mai</p>
                </div>

            </div>
            
        </section>
    </footer>    
    <script src="~/Content/home/js/jquery-2.1.1.min.js"></script>    
    <script src="~/Content/home/js/bootstrap.min.js"></script>
    <script src="~/Content/home/js/jquery.prettyPhoto.js"></script>
    <script src="~/Content/home/js/jquery.isotope.min.js"></script>
    <script src="~/Content/home/js/wow.min.js"></script>
    <script src="~/Content/home/js/functions.js"></script>
</body>

</html>
