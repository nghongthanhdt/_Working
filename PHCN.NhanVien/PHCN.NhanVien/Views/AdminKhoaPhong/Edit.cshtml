@model PHCN.NhanVien.Models.KhoaPhong
@{
    ViewBag.Title = "KhoaPhong";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.PanelTitle = "Cập nhật khoa phòng";

    string _mode = "new";
    if (ViewContext.RouteData.Values["id"] != null)
    {
        _mode = "edit";
    }
    var maKhoa = ViewContext.RouteData.Values["id"];
}

<script>
    var mode = '@_mode';
    var maKhoa = '@maKhoa';
</script>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-md-2 control-label">Mã khoa</label>
                <div class="col-md-4">
                    @if (Model.MaKhoa == "")
                    {
                        @Html.TextBoxFor(x => x.MaKhoa, new { @class = "form-control", @id = "txtMaKhoa"})
                    }
                    else
                    {
                        @Html.TextBoxFor(x => x.MaKhoa, new { @class = "form-control", @readonly = "readonly", @id = "txtMaKhoa" })
                    }

                </div>
                <label class="col-md-2 control-label">Số thứ tự</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.STT, new { @class = "form-control number", @id = "txtSTT" })
                </div>
            </div>            
            <div class="form-group">
                <label class="col-md-2 control-label">Tên khoa</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.TenKhoa, new { @class = "form-control", @id = "txtTenKhoa" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">                    
                    
                    <button class="btn btn-success" id="btnLuu"><i class=" glyphicon glyphicon-ok"></i> Lưu thông tin</button>
                    <a href="@Url.Action("Index", "AdminKhoaPhong")" class="btn btn-default" type="button"><i class=" glyphicon glyphicon-step-backward"></i> Trở lại danh sách</a>
                    @if (maKhoa != null)
                    {
                        <button class="btn btn-danger" type="button" id="btnXoa" data-makhoa="@Model.MaKhoa"><i class=" glyphicon glyphicon-trash"></i> Xóa</button>
                    }                    
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/scripts/app_scripts/AdminKhoaPhongEdit.js?@("v="+DateTime.Now.ToString("yyMMddhhmmss"))"></script>